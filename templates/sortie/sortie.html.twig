 {% extends 'base.html.twig' %}

{% block title %}Création d'une sortie{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Création d'une sortie</h1>

        {{ form_start(sortieForm, {'attr': {'class': 'row g-3'}}) }}

        <div class="col-md-12">
            {{ form_widget(sortieForm) }}
        </div>

        <div class="col-md-12">
            <a href="{{ path('lieu_creation') }}" class="btn btn-link">Ajouter un autre lieu</a>
        </div>

        <div class="col-md-12">
            <button type="submit" class="btn btn-primary me-2">Enregistrer</button>
            <button type="submit" class="btn btn-success me-2">Publier la sortie</button>
            <a href="{{ path('sortie_liste') }}" class="btn btn-secondary">Annuler</a>
        </div>

        {{ form_end(sortieForm) }}
    </div>
{% endblock %}



