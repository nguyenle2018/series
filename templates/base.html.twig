<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sortir ENI{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                  rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                  crossorigin="anonymous">
        {% endblock %}

    </head>
    <body>
        <div class="container">
            <header>
                <h1> <a>
                        <img src="{{ asset('images/logo.png') }}"  alt=" Sortie ENI">
                    </a>
                </h1>
{#                {% include 'menu/nav.html.twig' %}#}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                <div>
                    <h4>Date du jour : {{ "now" | date('d/m/Y')}}</h4>
{#                    <h4>Participant : {{ participant.prenom }}  {{ participant.nom }}</h4>#}
                </div>
             </header>
            <main>
                {% block body %}

                {% endblock %}
            </main>
            <footer>

                <div>@Copyright - Group 5  -  {{ "now" | date ('Y') }}</div>
            </footer>
        </div>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>